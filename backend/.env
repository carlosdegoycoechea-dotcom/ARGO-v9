# ARGO v10 Backend Configuration

# OpenAI API Key (required for chat functionality)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-placeholder_please_replace_with_real_key

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# Database Path (SQLite)
DATABASE_PATH=./data/argo.db

# Temp Directory for file uploads
TEMP_DIR=./temp

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/argo.log

# RAG Configuration
RAG_TOP_K=5
RAG_USE_HYDE=true
RAG_USE_RERANKER=true

# Model Router
DEFAULT_MODEL=gpt-4o-mini
FALLBACK_MODEL=gpt-3.5-turbo

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,xlsx,txt,md,csv
