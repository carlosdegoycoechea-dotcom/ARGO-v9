# ARGO v10 Backend Configuration

# OpenAI API Key (required for chat functionality)
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Environment
ENVIRONMENT=development

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# Database Path (SQLite)
DATABASE_PATH=./data/argo.db

# Temp Directory for file uploads
TEMP_DIR=./temp

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/argo.log

# RAG Configuration
RAG_TOP_K=5
RAG_USE_HYDE=true
RAG_USE_RERANKER=true

# Model Router
DEFAULT_MODEL=gpt-4
FALLBACK_MODEL=gpt-3.5-turbo

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,docx,xlsx,txt,md,csv
